<%- include('partials/header.ejs') %>
<div class="container">
    <h2>Posts</h2>
    <% posts.forEach(post => { %>
        <div class="card">
            <div class="card-body">
                <h3><%= post.title %></h3>
                <h5><%= post.subTitle %></h5>
                <p><%= post.content %></p>
                <% if (user) { %>
                    <a href="/editpost/<%= post.id %>">Edit</a>
                    <form method="POST" action="/deleting/<%= post.id %>" style="display: inline;">
                        <button type="submit">Delete</button>
                    </form>
                <% } %>
            </div>
        </div>
    <% }) %>
</div>
<%- include('partials/footer.ejs') %>
